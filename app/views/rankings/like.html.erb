<h1>お気に入りランキング</h1>
<% if @restaurants.present? %>
  <div class="row">
    <% @restaurants.each_with_index do |restaurant, index| %>
      <div class="item">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <img src="<%= restaurant.shop_image1 %>" alt="" >
            </div>
            <div class="panel-body">
              <p class="item-title"><%= link_to restaurant.name, restaurant %></p>
              <div class="buttons text-center">
                <% if logged_in? %>
                  <%= render 'likes/like_button', restaurant: restaurant %>
                <% end %>
              </div>
            </div>
            <div class="panel-footer">
              <p class="text-center"><%= index+1 %>位: <%= @ranking_counts[restaurant.id] %> Likes</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>